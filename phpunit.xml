<phpunit bootstrap="tests/bootstrap.php">
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
    <testsuites>
        <testsuite name="common">
            <file>tests/common/WhiteSpaceTest.php</file>
        </testsuite>
        <testsuite name="main">
            <file>fannie/unit-tests/InstallFannieTest.php</file>
            <file>fannie/unit-tests/ApiLibTest.php</file>
            <file>fannie/unit-tests/FannieSQLManagerTest.php</file>
            <file>fannie/unit-tests/LogTest.php</file>
            <file>fannie/unit-tests/MembersTest.php</file>
            <file>fannie/unit-tests/ModelsTest.php</file>
            <file>fannie/unit-tests/PagesFannieTest.php</file>
            <file>fannie/unit-tests/PluginFannieTest.php</file>
            <file>fannie/unit-tests/TasksTest.php</file>

            <file>pos/is4c-nf/unit-tests/InstallTest.php</file>
            <file>pos/is4c-nf/unit-tests/BaseLibsTest.php</file>
            <file>pos/is4c-nf/unit-tests/DisplayTest.php</file>
            <file>pos/is4c-nf/unit-tests/FooterBoxesTest.php</file>
            <file>pos/is4c-nf/unit-tests/KickersTest.php</file>
            <file>pos/is4c-nf/unit-tests/LocalStorageTest.php</file>
            <file>pos/is4c-nf/unit-tests/PagesTest.php</file>
            <file>pos/is4c-nf/unit-tests/ParsersTest.php</file>
            <file>pos/is4c-nf/unit-tests/PluginsTest.php</file>
            <file>pos/is4c-nf/unit-tests/ReceiptTest.php</file>
            <file>pos/is4c-nf/unit-tests/SQLManagerTest.php</file>
            <file>pos/is4c-nf/unit-tests/SearchTest.php</file>
            <file>pos/is4c-nf/unit-tests/TendersTest.php</file>
            <file>pos/is4c-nf/unit-tests/TotalActionsTest.php</file>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">common</directory>
            <directory suffix=".php">fannie</directory>
            <directory suffix=".php">pos/is4c-nf</directory>
            <exclude>
                <directory>vendor</directory>
                <directory>common/adodb5</directory>
                <directory>fannie/src/Excel</directory>
                <directory>fannie/src/fpdf</directory>
                <directory>fannie/modules</directory>
                <directory>fannie/unit-tests</directory>
                <directory>pos/is4c-nf/plugins</directory>
                <directory>pos/is4c-nf/test</directory>
                <directory>pos/is4c-nf/unit-tests</directory>
                <directory suffix="index.php">.</directory>
                <file>fannie/cron/members.sync.with.CiviCRM.php</file>
                <file>fannie/cron/members.update.from.CiviCRM.php</file>
                <file>fannie/cron/nightly.db.backup.php</file>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
